{
  "version": 2,
  "buildCommand": "npm install && npx tsc --noEmit",
  "env": {
    "npm_config_legacy_peer_deps": "true"
  },
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "public/**", "package.json", "tsconfig.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ]
}
